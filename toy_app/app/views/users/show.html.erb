<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>


<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% @user.micropost.each do |micropost| %>
	  <tr>
	    <td><%= micropost.content %></td>
	    <td><%= micropost.created_at  %></td>
      <td><%= link_to 'Show', micropost %></td>
      <td><%= link_to 'Edit', edit_micropost_path(micropost) %></td>
      <td><%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
	  </tr>
	<% end %>
  </tbody>
</table>
